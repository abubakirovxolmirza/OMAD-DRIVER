# ============================================
# SERVER CONFIGURATION
# ============================================

# Server port
SERVER_PORT=8080

# Server host (0.0.0.0 for all interfaces)
SERVER_HOST=0.0.0.0

# Environment: development, staging, production
ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL host
DB_HOST=localhost

# PostgreSQL port
DB_PORT=5432

# PostgreSQL user
DB_USER=postgres

# PostgreSQL password
DB_PASSWORD=postgres

# PostgreSQL database name
DB_NAME=taxi_service

# PostgreSQL SSL mode: disable, require, verify-ca, verify-full
DB_SSLMODE=disable

# ============================================
# JWT CONFIGURATION
# ============================================

# JWT secret key (generate a strong random string for production)
# Command to generate: openssl rand -base64 32
JWT_SECRET=your_super_secret_key_change_this_in_production_12345

# JWT token expiration in hours (default: 720 = 30 days)
JWT_EXPIRATION_HOURS=720

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================

# Upload directory path (relative or absolute)
UPLOAD_DIR=./uploads

# Maximum file upload size in bytes (default: 10485760 = 10MB)
MAX_UPLOAD_SIZE=10485760

# ============================================
# CORS CONFIGURATION
# ============================================

# Allowed origins (comma-separated)
# For production: https://yourdomain.com,https://api.yourdomain.com
# For development: http://localhost:3000,http://localhost:5173
CORS_ALLOWED_ORIGINS=https://api.omad-driver.uz,https://omad-driver.uz,http://localhost:3000,http://localhost:5173

# ============================================
# PRICING CONFIGURATION
# ============================================

# Discount for 1 passenger (percentage)
DISCOUNT_1_PERSON=0

# Discount for 2 passengers (percentage)
DISCOUNT_2_PERSON=10

# Discount for 3 passengers (percentage)
DISCOUNT_3_PERSON=15

# Discount for full car (4 passengers, percentage)
DISCOUNT_FULL_CAR=20

# Service fee percentage applied to all orders
SERVICE_FEE_PERCENTAGE=15

# ============================================
# TELEGRAM CONFIGURATION (Optional)
# ============================================

# Telegram bot token (for admin notifications)
TELEGRAM_BOT_TOKEN=

# Telegram admin group ID (for receiving notifications)
TELEGRAM_ADMIN_GROUP_ID=
